page {
  width: 100%;
  height: 100%;
}

.lui-page {
  width: 100%;
  height: 100%;
  background-color: #fff;
}

.lui-tips {
  margin-left: 5%;
  width: 95%;
  height: 45px;
  line-height: 45px;
  font-size: 13px;
  color: #a8a8a8;
}

.lui-items {
  width: auto;
  height: 45px;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  font-size: 13px;
  margin-left: 5%;
}

.lui-items::after {
  content: '';
  position: absolute;
  bottom: 0;
  height: 0.5px;
  width: 100%;
  /* left: 2%; */
  background-color: #6f6f6f;
}

